{
  "name": "erborist",
  "version": "0.1.0",
  "description": "Arborist as a standalone executable",
  "main": "index.js",
  "bin": {
    "erborist": "index.js"
  },
  "scripts": {
    "start": "node index.js",
    "make": "pkg . --compress Brotli --no-bytecode --public --out-path=dist/",
    "lint": "eslint index.js cmd"
  },
  "pkg": {
    "targets": [
      "node18-linux",
      "node18-macos",
      "node18-win"
    ]
  },
  "private": true,
  "license": "Apache-2.0",
  "dependencies": {
    "@npmcli/arborist": "^6.2.3",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "pkg": "^5.8.0"
  }
}
